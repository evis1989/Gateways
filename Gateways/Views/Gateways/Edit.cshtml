@model Gateways.Core.ViewModels.GatewayViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Gateways", FormMethod.Post, htmlAttributes: new { @id = "form_edit" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*@Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.SerialNumber)
    @Html.HiddenFor(model => model.Human_Readable)
    @Html.HiddenFor(model => model.Ipv4)*@

    <div class="card shadow mx-lg-5">
        <div class="card-header pb-4 d-flex justify-content-between">
            <h3 class="card-title ml-3 mr-lg-5">Edit Gateway</h3>
            <button title="Go Back" type="button" class="btn btn-circle btn-lg btn-primary"
                    onclick="location.href='@Url.Action("Index", "Gateways")'" t>
                <i class="material-icons">fast_rewind</i>
            </button>
        </div>

        <div class="card-body my-3">
            <div class="form-group row">
                @Html.LabelFor(model => model.SerialNumber, htmlAttributes: new { @class = "control-label col-md-2 col-form-label text-md-right" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SerialNumber, new
                    {
                    htmlAttributes = new { @class = "form-control" }
                    })

                    @Html.ValidationMessageFor(model => model.SerialNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Human_Readable, htmlAttributes: new { @class = "control-label col-md-2 col-form-label text-md-right" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Human_Readable, new
                    {
                    htmlAttributes = new { @class = "form-control " }
                    })

                    @Html.ValidationMessageFor(model => model.Human_Readable, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Ipv4, htmlAttributes: new { @class = "control-label col-md-2 col-form-label text-md-right" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ipv4, new
                    {
                    htmlAttributes = new { @class = "form-control " }
                    })

                    @Html.ValidationMessageFor(model => model.Ipv4, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button id="btn_save" type="submit" class="btn btn-primary px-4">
                        <i class="fa fa-floppy-o prefix mr-2"></i>Save
                    </button>
                </div>
            </div>
        </div>

    </div>

    @Html.Partial("_formLoader")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/component/gateways/view-edit.js"></script>
}
