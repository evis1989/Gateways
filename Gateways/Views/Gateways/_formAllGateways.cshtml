@model IEnumerable<Gateways.Core.ViewModels.GatewayViewModel>

<table id="all_gateways" class="table table-sm table-responsive-sm table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.SerialNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Human_Readable)</th>
            <th>@Html.DisplayNameFor(model => model.Ipv4)</th>
            <th>@Html.DisplayNameFor(model => model.TotalPeripherals)</th>
            <th>Edit</th>
            <th>Details</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.SerialNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.Human_Readable)</td>
            <td>@Html.DisplayFor(modelItem => item.Ipv4)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalPeripherals)</td>
            <td>
                <button type="button" class="btn btn-sm"
                        onclick="location.href='@Url.Action("Edit", "Gateways", new { Id = item.Id })'">

                    <i class="fa fa-pencil darken-1"></i>
                </button>
            </td>
            <td>
                <button type="button" class="btn btn-sm"
                        onclick="location.href='@Url.Action("Details", "Gateways", new { Id = item.Id })'">

                    <i class="fa fa-info-circle darken-1"></i>
                </button>
            </td>
        </tr>
        }
    </tbody>

</table>

