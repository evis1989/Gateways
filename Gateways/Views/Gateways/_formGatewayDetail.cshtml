@model Gateways.Core.ViewModels.GatewayViewModel 

<div class="row">
    <div class="col d-flex">
        <i class="fa fa-address-card-o  mt-1 mr-1" aria-hidden="true"></i>
        <strong class="mr-2">@Html.DisplayNameFor(model => model.SerialNumber)</strong>
        @Html.DisplayFor(model => model.SerialNumber)
    </div>

    
</div>
<div class="row mt-3">
    <div class="col d-flex">
        <i class="fa fa-id-card-o mt-1 mr-1" aria-hidden="true"></i>
        <strong class="mr-2">@Html.DisplayNameFor(model => model.Human_Readable)</strong>
        @Html.DisplayFor(model => model.Human_Readable)
    </div>
</div>
<div class="row mt-3">
    <div class="col d-flex">
        <i class="fa fa-terminal mt-1 mr-1" aria-hidden="true"></i>
        <strong class="mr-2">@Html.DisplayNameFor(model => model.Ipv4)</strong>
        @Html.DisplayFor(model => model.Ipv4)
    </div>
</div>

<div class="card-header mt-3">
    <h3 class="card-title">Peripheral List</h3>
</div>
<div class="mt-3">
    <table id="table_form" class="table table-sm table-responsive-sm table-hover mt-3">
        <thead>
            <tr>
                <th>UID</th>
                <th>Vendor</th>
                <th>CreatedDate</th>
                <th>Status</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Peripherals)
            {
                <tr>
                    <th>@Html.DisplayFor(modelItem => item.Uid)</th>
                    <td>@Html.DisplayFor(modelItem => item.Vendor)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                </tr>
            }
        </tbody>
    </table>
</div>


