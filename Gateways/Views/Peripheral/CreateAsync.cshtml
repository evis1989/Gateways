@model Gateways.Core.ViewModels.PeripheralViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Peripheral", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="card shadow mx-lg-5">
        <div class="card-header d-flex justify-content-between">
            <h3 class="card-title">Create Peripheral</h3>
            <button title="Go Back" type="button" class="btn btn-circle btn-lg btn-primary"
                    onclick="location.href='@Url.Action("Index", "Peripheral")'" t>
                <i class="material-icons">fast_rewind</i>
            </button>
        </div>

        <div class="card-body mt-4 mb-2">
            <div class="form-group row">
                @Html.LabelFor(model => model.Uid,
                    htmlAttributes: new { @class = "control-label col-md-2 col-form-label text-md-right" })

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Uid, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Uid, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Vendor,
                    htmlAttributes: new { @class = "control-label col-md-2 col-form-label text-md-right" })

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Vendor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Vendor, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.GatewayId, "GatewayId", htmlAttributes: new { @class = "control-label col-md-2 col-form-label text-md-right" })
                <div class="col-md-10">
                    @Html.DropDownList("GatewayId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GatewayId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.CreatedDate,
                    htmlAttributes: new { @class = "control-label col-md-2 col-form-label text-md-right" })

                <div class="col-md-10">
                    @Html.EditorFor(model => model.CreatedDate, new
                    {
                        htmlAttributes = new { @class = "form-control datepicker", @readonly = true }
                    })

                    @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Status,
                    htmlAttributes: new { @class = "control-label col-md-2 col-form-label text-md-right" })

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button id="btn_save" type="submit" class="btn btn-primary px-4">
                        <i class="fa fa-floppy-o prefix mr-2"></i>Save
                    </button>
                </div>
            </div>

        </div>
    </div>

    @Html.Partial("_formLoader")
}

@section Scripts {
    <script src="~/Scripts/component/addons/datetimepicker.js"></script>
    <script src="~/Scripts/component/events/view-create.js"></script>

}
